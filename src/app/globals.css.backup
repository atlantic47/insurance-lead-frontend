@import "tailwindcss";
@import "tw-animate-css";

@custom-variant dark (&:is(.dark *));

@theme {
  --font-family-sans: var(--font-inter), Inter, ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
}

/* Zoho-inspired Color System */
:root {
  /* Primary Colors */
  --primary-50: #f0f9ff;
  --primary-100: #e0f2fe;
  --primary-200: #bae6fd;
  --primary-300: #7dd3fc;
  --primary-400: #38bdf8;
  --primary-500: #0ea5e9;
  --primary-600: #0284c7;
  --primary-700: #0369a1;
  --primary-800: #075985;
  --primary-900: #0c4a6e;

  /* Neutral Colors */
  --neutral-25: #fcfcfd;
  --neutral-50: #f8fafc;
  --neutral-100: #f1f5f9;
  --neutral-200: #e2e8f0;
  --neutral-300: #cbd5e1;
  --neutral-400: #94a3b8;
  --neutral-500: #64748b;
  --neutral-600: #475569;
  --neutral-700: #334155;
  --neutral-800: #1e293b;
  --neutral-900: #0f172a;

  /* Success Colors */
  --success-50: #f0fdf4;
  --success-100: #dcfce7;
  --success-500: #22c55e;
  --success-600: #16a34a;

  /* Warning Colors */
  --warning-50: #fffbeb;
  --warning-100: #fef3c7;
  --warning-500: #f59e0b;
  --warning-600: #d97706;

  /* Error Colors */
  --error-50: #fef2f2;
  --error-100: #fee2e2;
  --error-500: #ef4444;
  --error-600: #dc2626;

  /* Shadows */
  --shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);

  /* Border Radius */
  --radius-xs: 0.125rem;
  --radius-sm: 0.25rem;
  --radius-md: 0.375rem;
  --radius-lg: 0.5rem;
  --radius-xl: 0.75rem;

  /* Spacing */
  --spacing-xs: 0.5rem;
  --spacing-sm: 0.75rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --radius: 0.625rem;
  --background: oklch(1 0 0);
  --foreground: oklch(0.145 0 0);
  --card: oklch(1 0 0);
  --card-foreground: oklch(0.145 0 0);
  --popover: oklch(1 0 0);
  --popover-foreground: oklch(0.145 0 0);
  --primary: oklch(0.205 0 0);
  --primary-foreground: oklch(0.985 0 0);
  --secondary: oklch(0.97 0 0);
  --secondary-foreground: oklch(0.205 0 0);
  --muted: oklch(0.97 0 0);
  --muted-foreground: oklch(0.556 0 0);
  --accent: oklch(0.97 0 0);
  --accent-foreground: oklch(0.205 0 0);
  --destructive: oklch(0.577 0.245 27.325);
  --border: oklch(0.922 0 0);
  --input: oklch(0.922 0 0);
  --ring: oklch(0.708 0 0);
  --chart-1: oklch(0.646 0.222 41.116);
  --chart-2: oklch(0.6 0.118 184.704);
  --chart-3: oklch(0.398 0.07 227.392);
  --chart-4: oklch(0.828 0.189 84.429);
  --chart-5: oklch(0.769 0.188 70.08);
  --sidebar: oklch(0.985 0 0);
  --sidebar-foreground: oklch(0.145 0 0);
  --sidebar-primary: oklch(0.205 0 0);
  --sidebar-primary-foreground: oklch(0.985 0 0);
  --sidebar-accent: oklch(0.97 0 0);
  --sidebar-accent-foreground: oklch(0.205 0 0);
  --sidebar-border: oklch(0.922 0 0);
  --sidebar-ring: oklch(0.708 0 0);
}

/* Global Styles - Exact Jira Style */
* {
  box-sizing: border-box;
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

body {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: #f4f5f7;
  color: #172b4d;
  line-height: 1.42857;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin: 0;
  padding: 0;
}

/* Modern Select Styling */
select {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: white;
  color: var(--neutral-700);
  border: 1px solid var(--neutral-300);
  border-radius: var(--radius-md);
  padding: 0.5rem 2.5rem 0.5rem 0.75rem;
  font-size: 0.875rem;
  line-height: 1.25rem;
  background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23475569' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
  background-position: right 0.5rem center;
  background-repeat: no-repeat;
  background-size: 1rem 1rem;
  appearance: none;
  transition: all 0.15s ease-in-out;
}

select:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 3px var(--primary-50);
}

select:hover {
  border-color: var(--neutral-400);
}

select option {
  background-color: white;
  color: var(--neutral-700);
  padding: 0.5rem;
}

/* Input Styling */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="number"],
input[type="tel"],
input[type="url"],
textarea {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: white;
  border: 1px solid var(--neutral-300);
  border-radius: var(--radius-md);
  padding: 0.5rem 0.75rem;
  font-size: 0.875rem;
  line-height: 1.25rem;
  color: var(--neutral-700);
  transition: all 0.15s ease-in-out;
}

input:focus,
textarea:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 3px var(--primary-50);
}

input:hover,
textarea:hover {
  border-color: var(--neutral-400);
}

/* Button Styles */
.btn {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  font-size: 0.875rem;
  font-weight: 500;
  line-height: 1.25rem;
  transition: all 0.15s ease-in-out;
  cursor: pointer;
  border: none;
  text-decoration: none;
}

.btn-primary {
  background-color: var(--primary-600);
  color: white;
  padding: 0.5rem 1rem;
  box-shadow: var(--shadow-xs);
}

.btn-primary:hover {
  background-color: var(--primary-700);
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background-color: white;
  color: var(--neutral-700);
  border: 1px solid var(--neutral-300);
  padding: 0.5rem 1rem;
}

.btn-secondary:hover {
  background-color: var(--neutral-50);
  border-color: var(--neutral-400);
}

.btn-ghost {
  background-color: transparent;
  color: var(--neutral-600);
  padding: 0.5rem 1rem;
}

.btn-ghost:hover {
  background-color: var(--neutral-100);
  color: var(--neutral-700);
}

.btn-sm {
  padding: 0.375rem 0.75rem;
  font-size: 0.75rem;
}

.btn-lg {
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
}

/* Jira Card Styles */
.jira-card {
  background: #fff;
  border: 1px solid #dfe1e6;
  border-radius: 3px;
  box-shadow: none;
  transition: box-shadow 0.15s ease;
}

.jira-card:hover {
  box-shadow: 0 4px 8px -2px rgba(9, 30, 66, 0.25);
}

.jira-card-elevated {
  box-shadow: 0 1px 1px rgba(9, 30, 66, 0.25);
}

.card-header {
  padding: var(--spacing-lg);
  border-bottom: 1px solid var(--neutral-200);
}

.card-body {
  padding: var(--spacing-lg);
}

.card-footer {
  padding: var(--spacing-lg);
  border-top: 1px solid var(--neutral-200);
  background-color: var(--neutral-50);
  border-radius: 0 0 var(--radius-lg) var(--radius-lg);
}

/* Custom Scrollbar */
.custom-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: var(--neutral-300) transparent;
}

.custom-scrollbar::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: transparent;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background-color: var(--neutral-300);
  border-radius: 3px;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background-color: var(--neutral-400);
}

/* Status Badges */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.125rem 0.5rem;
  border-radius: var(--radius-md);
  font-size: 0.75rem;
  font-weight: 500;
  line-height: 1rem;
}

.badge-success {
  background-color: var(--success-50);
  color: var(--success-600);
}

.badge-warning {
  background-color: var(--warning-50);
  color: var(--warning-600);
}

.badge-error {
  background-color: var(--error-50);
  color: var(--error-600);
}

.badge-neutral {
  background-color: var(--neutral-100);
  color: var(--neutral-600);
}

.badge-primary {
  background-color: var(--primary-50);
  color: var(--primary-600);
}

/* Layout Improvements */
.dashboard-container {
  min-height: 100vh;
  background-color: var(--neutral-25);
}

.content-area {
  max-width: 100%;
  overflow-x: auto;
}

/* Jira Navigation Styles */
.jira-topnav {
  background: #0052cc;
  height: 56px;
  color: white;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.15);
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.jira-sidebar {
  background: #f4f5f7;
  width: 240px;
  border-right: 1px solid #dfe1e6;
  position: fixed;
  top: 56px;
  left: 0;
  bottom: 0;
  overflow-y: auto;
  z-index: 90;
}

.jira-main-content {
  margin-left: 240px;
  margin-top: 56px;
  background: #f4f5f7;
  min-height: calc(100vh - 56px);
  width: calc(100vw - 240px);
  overflow-x: hidden;
  position: relative;
  max-height: calc(100vh - 56px);
}

/* Animation utilities */
.fade-in {
  animation: fadeIn 0.2s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(4px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-12px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Focus styles for accessibility */
.focus-visible {
  outline: 2px solid var(--primary-500);
  outline-offset: 2px;
}

/* Hover effects */
.hover-lift {
  transition: all 0.15s ease-in-out;
}

.hover-lift:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* Jira-inspired improvements */
.jira-page-header {
  background: white;
  border-bottom: 1px solid #dfe1e6;
  padding: 24px 32px 16px 32px;
  margin: 0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.jira-page-content {
  padding: 24px 32px;
  background: #f4f5f7;
  min-height: calc(100vh - 140px);
  width: 100%;
  flex: 1;
}

.jira-content-card {
  background: #fff;
  border: 1px solid #dfe1e6;
  border-radius: 3px;
  margin-bottom: 16px;
  width: 100%;
  box-sizing: border-box;
}

.jira-stat-card {
  background: #fff;
  border: 1px solid #dfe1e6;
  border-radius: 3px;
  padding: 20px;
  transition: all 0.15s ease;
}

.jira-stat-card:hover {
  box-shadow: 0 4px 8px -2px rgba(9, 30, 66, 0.25);
}

.jira-nav-item {
  color: #42526e;
  padding: 8px 16px;
  border-radius: 3px;
  transition: all 0.1s ease;
  text-decoration: none;
  display: flex;
  align-items: center;
  font-size: 14px;
  font-weight: 400;
  margin: 2px 8px;
}

.jira-nav-item:hover {
  background: #ebecf0;
  color: #172b4d;
  text-decoration: none;
}

.jira-nav-item.active {
  background: #deebff;
  color: #0052cc;
  font-weight: 600;
}

.jira-nav-item.active:before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3px;
  background: #0052cc;
  border-radius: 0 3px 3px 0;
}

.jira-badge {
  background: #0052cc;
  color: white;
  font-size: 11px;
  font-weight: 700;
  border-radius: 2em;
  padding: 2px 6px;
  margin-left: auto;
  min-width: 16px;
  text-align: center;
}

.jira-button-primary {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: #0052CC;
  color: white;
  border: none;
  border-radius: 3px;
  padding: 8px 12px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
}

.jira-button-primary:hover {
  background: #0747A6;
}

.jira-button-secondary {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: transparent;
  color: #42526E;
  border: 1px solid #DFE1E6;
  border-radius: 3px;
  padding: 8px 12px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
}

.jira-button-secondary:hover {
  background: #F4F5F7;
}

/* Additional Jira-specific styling */
.jira-topnav .jira-logo {
  font-weight: 600;
  letter-spacing: -0.01em;
}

.jira-topnav input[type="text"]:focus {
  background: white;
  color: #172b4d;
}

.jira-topnav input[type="text"]:focus::placeholder {
  color: #6b778c;
}

/* Jira navigation active state */
.jira-nav-item.active {
  position: relative;
}

.jira-nav-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3px;
  background: #0052cc;
  border-radius: 0 3px 3px 0;
}

/* Typography improvements */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-inter), Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-weight: 600;
  letter-spacing: -0.005em;
}

/* Custom scrollbar for Jira style */
.jira-sidebar::-webkit-scrollbar {
  width: 8px;
}

.jira-sidebar::-webkit-scrollbar-track {
  background: transparent;
}

.jira-sidebar::-webkit-scrollbar-thumb {
  background: #dfe1e6;
  border-radius: 4px;
}

.jira-sidebar::-webkit-scrollbar-thumb:hover {
  background: #b3bac5;
}

/* Page transitions */
.page-enter {
  opacity: 0;
  transform: translateY(8px);
}

.page-enter-active {
  opacity: 1;
  transform: translateY(0);
  transition: opacity 200ms ease, transform 200ms ease;
}

/* Focus states for accessibility */
.jira-nav-item:focus,
.jira-button-primary:focus,
.jira-button-secondary:focus {
  outline: 2px solid #4c9aff;
  outline-offset: 2px;
}

@theme inline {
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

.dark {
  --background: oklch(0.145 0 0);
  --foreground: oklch(0.985 0 0);
  --card: oklch(0.205 0 0);
  --card-foreground: oklch(0.985 0 0);
  --popover: oklch(0.205 0 0);
  --popover-foreground: oklch(0.985 0 0);
  --primary: oklch(0.922 0 0);
  --primary-foreground: oklch(0.205 0 0);
  --secondary: oklch(0.269 0 0);
  --secondary-foreground: oklch(0.985 0 0);
  --muted: oklch(0.269 0 0);
  --muted-foreground: oklch(0.708 0 0);
  --accent: oklch(0.269 0 0);
  --accent-foreground: oklch(0.985 0 0);
  --destructive: oklch(0.704 0.191 22.216);
  --border: oklch(1 0 0 / 10%);
  --input: oklch(1 0 0 / 15%);
  --ring: oklch(0.556 0 0);
  --chart-1: oklch(0.488 0.243 264.376);
  --chart-2: oklch(0.696 0.17 162.48);
  --chart-3: oklch(0.769 0.188 70.08);
  --chart-4: oklch(0.627 0.265 303.9);
  --chart-5: oklch(0.645 0.246 16.439);
  --sidebar: oklch(0.205 0 0);
  --sidebar-foreground: oklch(0.985 0 0);
  --sidebar-primary: oklch(0.488 0.243 264.376);
  --sidebar-primary-foreground: oklch(0.985 0 0);
  --sidebar-accent: oklch(0.269 0 0);
  --sidebar-accent-foreground: oklch(0.985 0 0);
  --sidebar-border: oklch(1 0 0 / 10%);
  --sidebar-ring: oklch(0.556 0 0);
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
  }
}
